@model ImportExcelFIle.DotNETCore.Models.QuyDinhSiSoLopHocPhan

@{
    ViewData["Model"] = "Quy định về sĩ số lớp học phần";
    ViewData["Controller"] = "QuyDinhSiSoLopHocPhans";
    Layout = null;
}
<form asp-action="CreateOrEdit" asp-route-id="@Model.IdQuyDinhSiSoLopHocPhan" onsubmit="return jQueryAjaxPost(this);">
    <div class="row col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdQuyDinhSiSoLopHocPhan" />
        <div class="col-md-6 form-group">
            <label asp-for="DangHocPhan" class="control-label font-weight-bold"></label>
            <select asp-for="DangHocPhan" class="form-control" asp-items="ViewBag.DangHocPhanTinhHeSo"></select>
            <span asp-validation-for="DangHocPhan" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="CanDuoi" class="control-label font-weight-bold"></label>
            <input asp-for="CanDuoi" class="form-control" />
            <span asp-validation-for="CanDuoi" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="CanTren" class="control-label font-weight-bold"></label>
            <input asp-for="CanTren" class="form-control" />
            <span asp-validation-for="CanTren" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="HeSoSiSo" class="control-label font-weight-bold"></label>
            <input asp-for="HeSoSiSo" class="form-control" />
            <span asp-validation-for="HeSoSiSo" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="ThoiGianBatDau" class="control-label font-weight-bold"></label>
            <input asp-format="{0:yyyy-MM-dd}" asp-for="ThoiGianBatDau" class="form-control" />
            <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="ThoiGianKetThuc" class="control-label font-weight-bold"></label>
            <input asp-format="{0:yyyy-MM-dd}" asp-for="ThoiGianKetThuc" class="form-control" />
            <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group text-right float-right">
            <input id="Luu" type="submit" value="Lưu @ViewData["Model"]" class="btn btn-primary" />
        </div>
        <div class="form-group text-left float-left">
            <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Quay lại</span>
            </button>
        </div>
    </div>
</form>
