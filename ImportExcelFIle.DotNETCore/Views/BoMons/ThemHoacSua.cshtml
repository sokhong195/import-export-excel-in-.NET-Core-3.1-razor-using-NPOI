@model ImportExcelFIle.DotNETCore.Models.BoMon

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<div class="col-md-12 mx-auto pt-0 p-0">
    <div class="card">
        <form asp-action="ThemHoacSua" id="frmCreate" asp-route-id="@Model.IdBoMon" onsubmit="return jQueryAjaxPost(this);">
            <input type="hidden" asp-for="@Model.IdBoMon" />
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TenBoMon" class="control-label"></label>
                        <input asp-for="TenBoMon" class="form-control" />
                        <span asp-validation-for="TenBoMon" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="IdKhoa" class="control-label"></label>
                        <select asp-for="IdKhoa" class="form-control" asp-items="ViewBag.IdKhoa"></select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ThoiGianBatDau" class="control-label"></label>
                        <input asp-for="ThoiGianBatDau" class="form-control" />
                        <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ThoiGianKetThuc" class="control-label"></label>
                        <input asp-for="ThoiGianKetThuc" class="form-control" />
                        <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input id="Luu" type="submit" value="Lưu bộ môn" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="form-group text-left float-left">
    <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">Quay lại</span>
    </button>
</div>
<style>
    .error {
        color: red;
    }
</style>